<CustButton@Button>:
    font_size: self.height/2

MainWindow:

<MainWindow>:
    orientation: "vertical"
    img_source: im

    FloatLayout:
        size_hint:1,5
        Image:
            id:im
            source: 'images/art.png'
            pos_hint:{'x':0,'y':0}


    BoxLayout:
        size_hint: 1,1
        padding:2

        Label:
            size_hint:0.7, 1
            id: entry
            font_size: self.height

    BoxLayout:
        size_hint: 1,1
        padding:2

        Button:
            font_size:self.width/8
            text: "afspelen"
            on_press: root.playstring(entry.text,im)

        Button:
            font_size:self.width/8
            text: "wissen"
            on_press: entry.text=''

        Button:
            font_size:self.width/8
            text: "foto"
            on_press: root.playstring(entry.text,im)

    GridLayout:
        size_hint: 1,4
        id:keyboard
        rows:4
        cols:8
        spacing:5

        CustButton:
            text: "A"
            on_press: entry.text += self.text; root.key_pressed("a")
