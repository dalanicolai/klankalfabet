<CustButton@Button>:
    font_size: self.height

<BoxLayout>:
    orientation: "vertical"

    FloatLayout:
        text:'lksj'
#        Image:
#            id: im
#            source: app.img_source
#            pos_hint:{'x':0.0, 'y':0.0}

    GridLayout:
        size_hint: 1, 0.1
        cols:2
        padding:2

        TextInput:
            size_hint:0.7, 1
            id: entry
            font_size: 25
        Button:
            size_hint:0.3, 1
            font_size:self.height
            text: "afspelen"
            on_press: app.playstring()

    GridLayout:
        size_hint: 1, 0.4
        id:keyboard
        rows:4
        cols:8
