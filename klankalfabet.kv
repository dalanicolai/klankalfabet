<CustButton@Button>:
    font_size: self.height/3

MainWindow:

<MainWindow>:
    orientation: "vertical"
    img_source: im
    im_button: im_button
    auto_button:auto_button
    hide_button:hide_button

    FloatLayout:
        size_hint:1,5
        Image:
            id:im
            source: 'images/art.png'
            pos_hint:{'x':0,'y':0}
            allow_stretch: True

    BoxLayout:
        size_hint: 1,1
        padding: 0,0,0,5
        spacing: 5

        Button:
            size_hint: 10,1
            on_press: root.playimage(self.text, im)
            id: im_button
            font_size:self.width/6
            text: "verrassing"

        Button:
            size_hint: 5,1
            id:auto_button
            size_hint:5, 1
            font_size:self.width/6
            text: "auto: aan"
            on_press: root.toggle_auto(self.text)

        Button:
            id:hide_button
            size_hint:5, 1
            font_size:self.width/6
            text: "toon"
            on_press: root.toggle_hide(self.text)


    BoxLayout:
        size_hint: 1,1
        padding: 0,0,0,5
        spacing: 5


        Label:
            size_hint:10, 1
            id: entry
            font_size: self.height

        Button:
            size_hint:5, 1
            font_size:self.width/6
            text: "afspelen"
            on_press: root.playstring(entry.text)

        Button:
            size_hint:5, 1
            font_size:self.width/6
            text: "<-"
            on_press: entry.text=entry.text[:-1]

        Button:
            size_hint:5, 1
            font_size:self.width/6
            text: "wissen"
            on_press: entry.text=''


    GridLayout:
        size_hint: 1,4
        id:keyboard
        rows:4
        cols:8
        spacing:5

        CustButton:
            id:a
            text: "A"
            on_press: entry.text += self.text; root.key_pressed("a")
